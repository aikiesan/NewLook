# CP2B Maps V3 - Environment Configuration Template
# Copy to .env and fill in your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=development  # development, staging, production
DEBUG=true
SECRET_KEY=generate-with-openssl-rand-hex-32  # CHANGE THIS!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://cp2b_user:your-password@localhost:5432/cp2b_maps
POSTGRES_USER=cp2b_user
POSTGRES_PASSWORD=your-secure-password-min-12-chars  # CHANGE THIS!
POSTGRES_DB=cp2b_maps
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================================
# SUPABASE AUTHENTICATION
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# For production, add comma-separated origins:
PRODUCTION_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# SECURITY NOTES
# ============================================================================
# Generate SECRET_KEY with:
#   openssl rand -hex 32
#
# Minimum password length in production: 12 characters
# Never commit .env files to version control!
