# CP2B Maps V3 Frontend - Environment Variables Template
# Copy this file to .env.local and fill in the values

# Backend API URL
# Local: http://localhost:8000
# Production: https://newlook-production.up.railway.app
NEXT_PUBLIC_API_URL=http://localhost:8000

# Data Source Configuration (choose one)
# Priority: SUPABASE > MOCK_DATA > FastAPI Backend

# Use Supabase directly (RECOMMENDED for production)
# true = Fetch data directly from Supabase database
# false = Use other data sources
NEXT_PUBLIC_USE_SUPABASE=true

# Force Mock Data (for development without backend)
# true = Use client-side mock data (bypasses everything)
# false = Use Supabase or backend API
NEXT_PUBLIC_USE_MOCK_DATA=false

# Supabase Configuration
# Get these values from: https://supabase.com/dashboard/project/zyuxkzfhkueeipokyhgw/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://zyuxkzfhkueeipokyhgw.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
